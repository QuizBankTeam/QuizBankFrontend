<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/fl_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:padding="1dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/ll_action_buttons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RadioGroup
                android:id="@+id/readType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fl_home"
                android:layout_margin="8dp"
                android:background="@drawable/drawable_radio_group_tab_background"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/onePersonOnly"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.50"
                    android:background="@drawable/drawable_units_tab_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="單人模式"
                    android:textColor="@drawable/drawable_units_tab_text_color_selector"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/MultiPerson"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.50"
                    android:background="@drawable/drawable_units_tab_selector"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="多人模式"
                    android:textColor="@drawable/drawable_units_tab_text_color_selector"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RadioGroup>


                <LinearLayout
                    android:id="@+id/labelList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        >
                        <FrameLayout
                            android:layout_width="65dp"
                            android:layout_height="30dp"
                            android:background="@drawable/selected_option_border_bg"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="作業系統"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="6sp"
                                android:textStyle="bold"
                                />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="65dp"
                            android:layout_height="30dp"
                            android:background="@drawable/selected_option_border_bg"
                            android:layout_marginLeft="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="作業系統"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="6sp"
                                android:textStyle="bold"
                                />
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="65dp"
                            android:layout_height="30dp"
                            android:background="@drawable/selected_option_border_bg"
                            android:layout_marginLeft="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="作業系統"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="6sp"
                                android:textStyle="bold"
                                />
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="65dp"
                            android:layout_height="30dp"
                            android:background="@drawable/selected_option_border_bg"
                            android:layout_marginLeft="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="作業系統"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="6sp"
                                android:textStyle="bold"
                                />
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:background="@drawable/selected_option_border_bg"
                            android:layout_marginLeft="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="..."
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>
            <ImageView
                android:layout_below="@id/labelList"
                android:id="@+id/cameraTest"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:fillViewport="true"
                android:src="@color/colorRipple"
                >
            </ImageView>
<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:id="@+id/quizDataList"-->
<!--                android:layout_below="@id/sv_main"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_margin="5dp" />-->
        </LinearLayout>





    </LinearLayout>




    <LinearLayout
        android:id="@+id/ll_action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/colorRipple"
        app:layout_constraintTop_toBottomOf="@id/fl_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/home"
            android:background="@color/colorRipple"
            android:scaleType="fitXY"

            />
        <ImageButton
            android:id="@+id/test"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/test"
            android:background="@color/colorRipple"
            android:scaleType="fitXY"

            />
        <ImageButton
            android:id="@+id/camera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@color/colorRipple"
            android:src="@drawable/camera"
            android:scaleType="fitXY"

            />
        <ImageButton
            android:id="@+id/bank"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/book"
            android:background="@color/colorRipple"
            android:scaleType="fitXY"

            />
        <ImageButton
            android:id="@+id/menu"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:src="@drawable/menu"
            android:background="@color/colorRipple"
            android:scaleType="fitXY"

            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>